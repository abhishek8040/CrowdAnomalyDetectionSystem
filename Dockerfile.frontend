FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Build the application (production bundle)
RUN npm run build

# Expose dev/preview port (will map to host 8080 as needed)
EXPOSE 3000

# Serve built app via preview (ensures dist exists); build already done in image
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3000"]
